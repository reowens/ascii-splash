{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5",
      "prompt": "{file:./.opencode/prompts/build.txt}",
      "description": "General development and bug fixes"
    },
    "plan": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5",
      "prompt": "{file:./.opencode/prompts/plan.txt}",
      "description": "Strategic planning and architecture",
      "tools": {
        "write": false,
        "edit": false
      }
    },
    "audit": {
      "mode": "primary",
      "model": "github-copilot/claude-haiku-4.5",
      "prompt": "{file:./.opencode/prompts/audit.txt}",
      "description": "Documentation and release management"
    },
    "pattern": {
      "mode": "subagent",
      "model": "github-copilot/claude-sonnet-4.5",
      "prompt": "{file:./.opencode/prompts/pattern.txt}",
      "description": "Pattern development specialist (subagent)"
    },
    "test": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "prompt": "{file:./.opencode/prompts/test.txt}",
      "description": "Test writing specialist (subagent)"
    },
    "code-audit": {
      "mode": "subagent",
      "model": "github-copilot/claude-sonnet-4.5",
      "prompt": "{file:./.opencode/prompts/code-audit.txt}",
      "description": "Deep code quality analysis (subagent)",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "ux": {
      "mode": "subagent",
      "model": "github-copilot/claude-sonnet-4.5",
      "prompt": "{file:./.opencode/prompts/ux.txt}",
      "description": "Terminal UX analysis (subagent)"
    }
  }
}
