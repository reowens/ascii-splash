{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5",
      "prompt": "{file:./.opencode/prompts/build.txt}",
      "description": "General development and bug fixes"
    },
    "pattern": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5",
      "prompt": "{file:./.opencode/prompts/pattern.txt}",
      "description": "ASCII animation pattern development"
    },
    "test": {
      "mode": "primary",
      "model": "github-copilot/claude-haiku-4.5",
      "prompt": "{file:./.opencode/prompts/test.txt}",
      "description": "Test writing and maintenance"
    },
    "docs": {
      "mode": "primary",
      "model": "github-copilot/claude-haiku-4.5",
      "prompt": "{file:./.opencode/prompts/docs.txt}",
      "description": "Documentation updates"
    },
    "production": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5",
      "prompt": "{file:./.opencode/prompts/production.txt}",
      "description": "Release management (read-only)",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "ux": {
      "mode": "subagent",
      "model": "github-copilot/claude-sonnet-4.5",
      "prompt": "{file:./.opencode/prompts/ux.txt}",
      "description": "Terminal UX analysis (subagent)"
    }
  }
}
