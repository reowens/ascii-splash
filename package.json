{
  "name": "ascii-splash",
  "version": "0.1.0",
  "description": "A lightweight terminal ASCII animation app with 17 interactive patterns, 102 presets, 5 themes, and mouse support. Perfect ambient visuals for your IDE workspace.",
  "main": "dist/main.js",
  "bin": {
    "splash": "./dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "terminal",
    "ascii",
    "ascii-art",
    "animation",
    "art",
    "cli",
    "terminal-animation",
    "waves",
    "starfield",
    "matrix",
    "plasma",
    "fireworks",
    "particles",
    "visual",
    "ambient",
    "screensaver",
    "background",
    "ide",
    "workspace"
  ],
  "author": "reoiv",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/reowens/ascii-splash.git"
  },
  "bugs": {
    "url": "https://github.com/reowens/ascii-splash/issues"
  },
  "homepage": "https://github.com/reowens/ascii-splash#readme",
  "files": [
    "dist/",
    "examples/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "conf": "^10.2.0",
    "terminal-kit": "^3.1.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "@types/terminal-kit": "^2.5.7",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
